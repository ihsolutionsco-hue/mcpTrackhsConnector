{
  "search_reservations": {
    "name": "search_reservations",
    "description": "Search reservations in Track HS API with advanced filtering and pagination.\n\nThis tool provides comprehensive reservation search capabilities with support for\nfull-text search, date range filtering, status filtering, and pagination. It's\noptimized for AI model integration with the MCP protocol.\n\nKey features:\n- Full API V2 compatibility with 25+ filter parameters\n- Standard pagination and Elasticsearch scroll for large datasets\n- Comprehensive date range filtering (booking, arrival, departure)\n- Multiple ID filtering with comma-separated values\n- Flexible status and text search\n\nReturns:\n    JSON string with reservation data including guest information, unit details,\n    pricing, policies, and pagination metadata.\n\nRaises:\n    ValidationError: If parameters are invalid (e.g., invalid date format)\n    APIError: If the API request fails (e.g., 401 Unauthorized, 500 Server Error)",
    "inputSchema": {
      "properties": {
        "page": {
          "default": 1,
          "description": "Page number (0-based indexing). Max total results: 10,000.",
          "maximum": 10000,
          "minimum": 0,
          "type": "integer"
        },
        "size": {
          "default": 10,
          "description": "Number of results per page (1-1000)",
          "maximum": 1000,
          "minimum": 1,
          "type": "integer"
        },
        "sort_column": {
          "default": "name",
          "description": "Column to sort by. Valid values: name, status, altConf, agreementStatus, type, guest, guests, unit, units, checkin, checkout, nights. Disabled when using scroll.",
          "type": "string"
        },
        "sort_direction": {
          "default": "asc",
          "description": "Sort direction: 'asc' or 'desc'. Disabled when using scroll.",
          "type": "string"
        },
        "search": {
          "anyOf": [
            {
              "maxLength": 200,
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Full-text search in reservation names, guest names, and descriptions"
        },
        "tags": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Filter by tag IDs (comma-separated: '1,2,3')"
        },
        "node_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Filter by node IDs (comma-separated: '1,2,3')"
        },
        "unit_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Filter by unit IDs (comma-separated: '10,20,30')"
        },
        "contact_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Filter by contact IDs (comma-separated)"
        },
        "travel_agent_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Filter by travel agent IDs (comma-separated)"
        },
        "campaign_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Filter by campaign IDs (comma-separated)"
        },
        "user_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Filter by user IDs (comma-separated)"
        },
        "unit_type_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Filter by unit type IDs (comma-separated)"
        },
        "rate_type_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Filter by rate type IDs (comma-separated)"
        },
        "reservation_type_id": {
