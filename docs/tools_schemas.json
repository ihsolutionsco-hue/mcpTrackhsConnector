    "inputSchema": {
      "properties": {
        "folio_id": {
          "description": "Unique folio ID (positive integer as string). Example: '12345' or '37152796'",
          "maxLength": 20,
          "minLength": 1,
          "pattern": "^\\d+$",
          "type": "string"
        }
      },
      "required": [
        "folio_id"
      ],
      "type": "object"
    }
  },
