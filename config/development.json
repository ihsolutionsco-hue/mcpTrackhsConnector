{
  "development": {
    "hotReload": true,
    "debug": true,
    "port": 3000,
    "timeout": 30000
  },
  "testing": {
    "coverage": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      },
      "core": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      },
      "tools": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "timeout": 10000,
    "maxWorkers": "50%"
  },
  "build": {
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "sourceMap": true,
    "declaration": true
  }
}
