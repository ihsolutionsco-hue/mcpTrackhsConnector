# TrackHS MCP Connector - Environment Variables
# Copia este archivo a .env y configura las variables

# TrackHS API Configuration
# URL oficial de TrackHS API
TRACKHS_API_URL=https://ihmvacations.trackhs.com/api
TRACKHS_USERNAME=your_username_here
TRACKHS_PASSWORD=your_password_here
TRACKHS_TIMEOUT=30

# FastMCP Configuration (opcional)
FASTMCP_API_KEY=your_fastmcp_api_key_here

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO

# Testing Configuration
TEST_API_URL=https://api-test.trackhs.com/api
TEST_USERNAME=test_user
TEST_PASSWORD=test_password

# Production Configuration
PRODUCTION=false
SSL_ENABLED=true
DOMAIN=trackhs-mcp.fastmcp.cloud

# Monitoring Configuration
METRICS_ENABLED=true
ALERTS_ENABLED=true
DASHBOARD_ENABLED=true

# Security Configuration
CORS_ENABLED=true
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=7

# Notification Configuration
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_RECIPIENTS=team@ihsolutions.co
SLACK_NOTIFICATIONS_ENABLED=false
SLACK_WEBHOOK_URL=

# CI/CD Configuration
AUTO_DEPLOY=true
DEPLOY_BRANCH=main
TESTS_REQUIRED=true
SECURITY_SCAN=true
